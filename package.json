{
  "name": "quilleditor",
  "version": "1.1.0",
  "description": "A lightweight code editor built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux",
    "release": "npm run build:all",
    "release:prepare": "node scripts/release.js",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "version": "npm run release && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "editor",
    "code",
    "electron",
    "ide"
  ],
  "author": "George Ongoro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/004Ongoro/quill-editor.git"
  },
  "bugs": {
    "url": "https://github.com/004Ongoro/quill-editor/issues"
  },
  "homepage": "https://github.com/004Ongoro/quill-editor#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "jest": "^30.2.0"
  },
  "dependencies": {
    "canvas": "^3.2.1"
  },
  "build": {
    "appId": "com.quilleditor.app",
    "productName": "QuillEditor",
    "copyright": "Copyright Â© 2024 George Ongoro",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/*.map",
      "!**/*.log",
      "!**/.gitignore",
      "!**/.eslintrc.*",
      "!**/.prettierrc.*",
      "!**/dist/**/*",
      "!**/.github/**/*",
      "!**/.vscode/**/*",
      "!**/coverage/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "icon": "assets/icons/icon.ico",
      "publisherName": "QuillEditor",
      "legalTrademarks": "QuillEditor",
      "asar": true,
      "asarUnpack": "**\\*.{node,dll}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "QuillEditor",
      "uninstallDisplayName": "QuillEditor",
      "license": "LICENSE"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icons/icon.png",
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "dmg": {
      "background": "assets/dmg-background.png",
      "iconSize": 128,
      "contents": [
        {
          "x": 380,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 120,
          "y": 180,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap",
        "tar.gz"
      ],
      "icon": "assets/icons/icon.png",
      "category": "Development",
      "maintainer": "george@ongoro.top",
      "description": "A lightweight code editor built with Electron",
      "synopsis": "Lightweight Code Editor",
      "asar": true
    },
    "extraMetadata": {},
    "publish": {
      "provider": "github",
      "owner": "004Ongoro",
      "repo": "quill-editor",
      "releaseType": "release"
    }
  }
}
